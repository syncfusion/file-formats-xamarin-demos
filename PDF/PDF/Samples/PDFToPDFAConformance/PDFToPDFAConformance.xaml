<?xml version="1.0" encoding="utf-8" ?>
<local:SampleView
              xmlns:local="clr-namespace:SampleBrowser.Core;assembly=SampleBrowser.Core"
              xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="SampleBrowser.PDF.PDFToPDFAConformance">

    <local:SampleView.Content>
        <StackLayout Padding="10">

            <Label x:Name="Description" LineBreakMode="WordWrap" Text="This sample illustrates how to convert a PDF document to a PDF/A-conforming document for archiving and long-term preservation." VerticalOptions="Center" FontSize="Medium" HorizontalOptions="Start" >
            </Label>
            <Label x:Name="label3" Text=" " VerticalOptions="Center"></Label>
            <StackLayout x:Name="stkLayout" Orientation="Horizontal" Spacing="10">
            <Button x:Name="btnViewTemplate" Clicked ="ButtonView_Click" Text ="View Template" HorizontalOptions="Start"/>
                <Button x:Name="btnGenerate"  Text="Convert to PDF/A" HorizontalOptions="Center" VerticalOptions="Center" Clicked="OnButtonClicked" />
            </StackLayout>
        </StackLayout>
    </local:SampleView.Content>

    <local:SamplePage.PropertyView>

    </local:SamplePage.PropertyView>
</local:SampleView>